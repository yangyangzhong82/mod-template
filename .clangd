Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: None
  Suppress:
    - "-Wmicrosoft-enum-forward-reference"
    - "-Wc++11-narrowing"
    - "-Wc++2b-extensions"
    - "-Wmicrosoft-cast"
CompileFlags:
  Add:
    - "-ferror-limit=0"
    - '-D__FUNCTION__="dummy"'
    - '-D__clangd__'
    - '-D_ALLOW_COMPILER_AND_STL_VERSION_MISMATCH'